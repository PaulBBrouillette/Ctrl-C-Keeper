{
  "manifest_version": 3,
  "name": "ClipVault - Clipboard Manager",
  "version": "1.0.0",
  "description": "Clipboard history manager for both text and images",
  "permissions": 
  [
    "storage", 
    "sidePanel", 
    "scripting", 
    "activeTab", 
    "contextMenus", 
    "clipboardRead", 
    "clipboardWrite"
  ],
  "icons": {
    "48": "images/clipboard.png",
    "128": "images/clipboard.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open ClipVault"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}